# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?schema=projectsvc"
DIRECT_URL="postgresql://username:password@host:port/database?schema=projectsvc"

# Server Configuration
PORT=4003
NODE_ENV="production"

# Service URLs
AUTH_SERVICE_URL="https://nexus-auth-service.vercel.app"
PROFILE_SERVICE_URL="https://nexus-profile-service.vercel.app"

# JWT Configuration (for verification)
JWT_ISSUER="nexus-auth-service"
JWT_AUDIENCE="nexus-platform"

# Optional: Redis for Caching
REDIS_URL="redis://username:password@host:port"

# WebSocket Configuration (limited in serverless)
WEBSOCKET_ENABLED=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,jpg,jpeg,png,gif"
